<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.streamtv"
       name="StreamTV"
       version="0.3"
       provider-name="kokangit">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Watch content from StreamTV.</summary>
    <summary lang="sv">Titta på innehåll från StreamTV.</summary>
    <description lang="en">With this addon you can stream content from StreamTV (stream-tv.me).</description>
	<description lang="sv">Med denna addon kan du strömma innehåll från StreamTV (stream-tv.me).</description>
    <platform>all</platform>
  </extension>
</addon>
